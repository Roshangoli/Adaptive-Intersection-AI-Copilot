<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Vehicle types -->
    <vType id="car" accel="2.5" decel="4.5" sigma="0.5" length="4.3" maxSpeed="50"/>
    <vType id="truck" accel="1.5" decel="3.5" sigma="0.5" length="12.0" maxSpeed="40"/>

    <!-- Routes -->
    <route id="route_ns" edges="E0 E1"/>
    <route id="route_sn" edges="E2 E3"/>
    <route id="route_ew" edges="E4 E5"/>
    <route id="route_we" edges="E6 E7"/>

    <!-- Vehicle flows -->
    <flow id="flow_ns" type="car" route="route_ns" begin="0" end="3600" period="5"/>
    <flow id="flow_sn" type="car" route="route_sn" begin="0" end="3600" period="7"/>
    <flow id="flow_ew" type="car" route="route_ew" begin="0" end="3600" period="6"/>
    <flow id="flow_we" type="car" route="route_we" begin="0" end="3600" period="8"/>

</routes>